{
  "name": "@hatcherdx/translation-system",
  "version": "0.3.5",
  "description": "Professional TypeScript translation system for Hatcher DX Engine documentation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dx-translate": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli/index.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:crossplatform": "vitest run --config vitest.crossplatform.config.ts",
    "test:crossplatform:watch": "vitest --config vitest.crossplatform.config.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "translation",
    "documentation",
    "markdown",
    "google-translate",
    "typescript",
    "cli"
  ],
  "author": {
    "name": "Chriss Mejia",
    "email": "chriss@hatche.rs"
  },
  "license": "MIT",
  "dependencies": {
    "@hatcherdx/puppeteer-google-translate": "workspace:*",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4",
    "@vitest/coverage-istanbul": "^3.2.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  }
}
