{
  "name": "@hatcherdx/terminal-system",
  "version": "0.1.0",
  "description": "Robust terminal system based on VSCode architecture for DX Engine",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./system/browser": {
      "types": "./dist/system/browser.d.ts",
      "import": "./dist/system/browser.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test-pty": "tsx scripts/test-node-pty.ts",
    "debug-electron": "tsx scripts/electron-console-debug.ts",
    "debug-console": "echo 'Copy and paste scripts/electron-console-debug.js content into Electron DevTools console'"
  },
  "keywords": [
    "terminal",
    "pty",
    "electron",
    "vscode",
    "xterm"
  ],
  "author": {
    "name": "Chriss Mejia",
    "email": "chriss@hatche.rs"
  },
  "license": "MIT",
  "dependencies": {
    "@hatcherdx/shared-rendering": "workspace:^",
    "node-pty": "^1.1.0-beta34",
    "tslog": "^4.9.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.1",
    "@types/uuid": "^9.0.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "jsdom": "^26.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "electron": ">=30.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  }
}
