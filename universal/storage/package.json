{
  "name": "@hatcherdx/storage",
  "version": "1.0.0",
  "type": "module",
  "description": "High-performance storage module with SQLite, encryption, and compression for Hatcher DX Engine",
  "author": {
    "name": "Hatcher DX Team",
    "email": "team@hatche.rs"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hatcherdx/dx-engine.git",
    "directory": "universal/storage"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js"
    },
    "./security": {
      "types": "./dist/security/index.d.ts",
      "import": "./dist/security/index.js",
      "require": "./dist/security/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:sqlite": "vitest run --config vitest.sqlite.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "pnpm test:unit && pnpm test:sqlite && pnpm test:integration",
    "test:all:local": "pnpm test:unit && pnpm test:sqlite && pnpm test:integration",
    "test:ci": "vitest run --config vitest.ci.config.ts",
    "test:ci:old": "VITEST_MOCK_SQLITE=true vitest run --config vitest.unit.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:coverage:unit": "vitest run --coverage --config vitest.unit.config.ts",
    "test:coverage:integration": "vitest run --coverage --config vitest.integration.config.ts",
    "test:coverage:all": "pnpm test:coverage:unit && pnpm test:coverage:integration",
    "test:coverage:ci": "VITEST_MOCK_SQLITE=true vitest run --coverage --config vitest.unit.config.ts",
    "test:ui": "vitest --ui",
    "test:ui:unit": "vitest --ui --config vitest.unit.config.ts",
    "test:ui:integration": "vitest --ui --config vitest.integration.config.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist coverage test-integration-data",
    "typecheck": "tsc --noEmit",
    "rebuild": "pnpm clean && pnpm build",
    "postinstall": "node -e \"try { require('better-sqlite3') } catch { console.log('better-sqlite3 bindings not available - tests will use mocks') }\""
  },
  "keywords": [
    "storage",
    "sqlite",
    "encryption",
    "compression",
    "database",
    "performance",
    "electron",
    "dx-engine"
  ],
  "dependencies": {
    "uuid": "^10.0.0",
    "argon2": "^0.31.0",
    "lz4": "^0.6.5",
    "brotli": "^1.3.3",
    "lru-cache": "^10.0.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^11.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@types/uuid": "^10.0.0",
    "@types/better-sqlite3": "^7.6.11",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "eslint": "9.24.0",
    "rimraf": "6.0.1",
    "sql-formatter": "^15.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
